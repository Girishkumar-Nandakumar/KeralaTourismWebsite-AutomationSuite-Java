<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Kerala Tourism Regression Suite" parallel="tests" thread-count="3">
    
    <test name="Chrome Tests">
    <parameter name="browser" value="chrome"/>
    <classes>
    <class name="keralaTourismAutomationTestNG.BasicSmokeTest"/>
    <class name="keralaTourismAutomationTestNG.BrokenLinkDetection"/>
    <class name="keralaTourismAutomationTestNG.E2EuserJourney"/>
    <class name="keralaTourismAutomationTestNG.FormFieldValidation"/>
    <class name="keralaTourismAutomationTestNG.Performance_PageLoadTime"/>
    <class name="keralaTourismAutomationTestNG.ResponsiveUITest"/>
    <class name="keralaTourismAutomationTestNG.XSSInjectionTest"/>
	</classes>
    </test>
    
    
     <test name="Firefox Tests">
    <parameter name="browser" value="firefox"/>
    <classes>
   <class name="keralaTourismAutomationTestNG.BasicSmokeTest"/>
    <class name="keralaTourismAutomationTestNG.BrokenLinkDetection"/>
    <class name="keralaTourismAutomationTestNG.E2EuserJourney"/>
    <class name="keralaTourismAutomationTestNG.FormFieldValidation"/>
    <class name="keralaTourismAutomationTestNG.Performance_PageLoadTime"/>
    <class name="keralaTourismAutomationTestNG.ResponsiveUITest"/>
    <class name="keralaTourismAutomationTestNG.XSSInjectionTest"/>
	</classes>
    </test>
 
  <test name="Edge Tests">
    <parameter name="browser" value="edge"/>
    <classes>
   <class name="keralaTourismAutomationTestNG.BasicSmokeTest"/>
    <class name="keralaTourismAutomationTestNG.BrokenLinkDetection"/>
    <class name="keralaTourismAutomationTestNG.E2EuserJourney"/>
    <class name="keralaTourismAutomationTestNG.FormFieldValidation"/>
    <class name="keralaTourismAutomationTestNG.Performance_PageLoadTime"/>
    <class name="keralaTourismAutomationTestNG.ResponsiveUITest"/>
    <class name="keralaTourismAutomationTestNG.XSSInjectionTest"/>
	</classes>
    </test>
</suite>
